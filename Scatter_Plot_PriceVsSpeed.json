{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Internet Speed vs Price in 2020",
  "data": {
    "url": "https://raw.githubusercontent.com/charlie891015/FIT3179/main/all_sorted.csv"
  },
  "params": [
    {
      "name": "Price",
      "value": 50,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 50,
        "step": 1,
        "name": "Price below: "
      }
    }
  ],
  "transform": [{"filter": "datum['Average price of 1GB (USD)'] <= Price"}],
  "layer": [
    {
      "mark": "point",
      "encoding": {
        "x": {
          "field": "Avg speed",
          "type": "quantitative",
          "scale": {"domain": [0, 150]}
        },
        "y": {
          "field": "Average price of 1GB (USD)",
          "type": "quantitative",
          "scale": {"domain": [0, 50]}
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Avg speed", "type": "quantitative"},
          {"field": "Average price of 1GB (USD)", "type": "quantitative"}
        ],
        "color": {"field": "Continental region", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "legendSelect", "value": 1},
          "value": 0.2
        }
      },
      "selection": {
        "legendSelect": {
          "type": "multi",
          "fields": ["Continental region"],
          "bind": "legend"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "fontSize": 10.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {"field": "Avg speed", "type": "quantitative"},
        "y": {"field": "Average price of 1GB (USD)", "type": "quantitative"},
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {}
}